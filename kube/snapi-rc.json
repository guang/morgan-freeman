{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "snapi-rc",
    "labels": {
      "name": "snapi"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "name": "snapi"
    },
    "template": {
      "metadata": {
        "labels": {
          "name": "snapi"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "snapi",
            "image": "guangyang/snapi:latest",
            "command": ["/bin/bash", "-c", "cd /home/dev/morgan-freeman/snapi && gunicorn --workers 5 --reload --timeout 1800 --bind 0.0.0.0:8000 wsgi:app"],
            "env": [
              {
                "name": "HOME",
                "value": "/home/dev"
              },
              {
                "name": "PYTHONPATH",
                "value": "/home/dev/snapi"
              },
              {
                "name": "SNAPI_CONFIGS_PATH",
                "value": "/etc/configs/snapi.cfg"
              }
            ],
            "ports": [
              {
                "containerPort": 8000
              }
            ],
            "resources": {
              "requests": {
                "cpu": "200m"
              }
            },
            "volumeMounts": [
              {
                "name": "snapi-configs-vol",
                "mountPath": "/etc/configs"
              },
              {
                "name": "snapi",
                "readOnly": false,
                "mountPath": "/home/dev"
              }
            ]
          },
          {
            "name": "git-sync",
            "image": "gcr.io/google_containers/git-sync:v2.0.3",
            "imagePullPolicy": "Always",
            "env": [
              {
                "name": "GIT_SYNC_REPO",
                "value": "https://github.com/guang/morgan-freeman.git"
              },
              {
                "name": "GIT_SYNC_SSH",
                "value": "false"
              },
              {
                "name": "GIT_SYNC_DEST",
                "value": "morgan-freeman"
              },
              {
                "name": "GIT_SYNC_BRANCH",
                "value": "master"
              }
            ],
            "volumeMounts": [
              {
                "name": "snapi",
                "readOnly": false,
                "mountPath": "/git"
              }
            ]
          }
        ],
        "securityContext": {
          "runAsUser": 0
        },
        "volumes": [
          {
            "name": "snapi-configs-vol",
            "secret": {
              "secretName": "snapi-configs"
            }
          },
          {
            "name": "snapi",
            "emptyDir": {}
          }
        ]
      }
    }
  }
}
